<Window x:Class="RateMe.View.Windows.GradesWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RateMe.View.Windows"
        mc:Ignorable="d"
        
        MouseDown="OnWindowClick"
        xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
        xmlns:UserControls="clr-namespace:RateMe.View.UserControls"
        Title="GradesWin" Height="860" Width="1600" WindowStartupLocation="CenterScreen"
        Background="#10151b">
    

    <WindowChrome.WindowChrome>
        <WindowChrome />
    </WindowChrome.WindowChrome>

    <Grid x:Name="windowGrid">
        <Grid x:Name="MainGrid" Margin="0,60,0,0" HorizontalAlignment="Center">

            <Grid.Resources>
                <DataTemplate x:Key="FormulaTemplate">
                    <UserControls:ControlElementsTable></UserControls:ControlElementsTable>
                </DataTemplate>

                <DataTemplate x:Key="EditTemplate">
                    <UserControls:SettingsGear MouseDown="OnEditGearClick"/>
                </DataTemplate>
                
            </Grid.Resources>

            <Border CornerRadius="10" BorderBrush="White" Background="Transparent" BorderThickness="2" Panel.ZIndex="1">
                <DataGrid x:Name="grades" ItemsSource="{Binding Subjects}" AutoGenerateColumns="False" HeadersVisibility="Column" SelectionMode="Single"
                      Width="1200" Background="Transparent" BorderBrush="Transparent" Foreground="White">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Предмет" Binding="{Binding Name}" Width="200" FontSize="17" />
                        <DataGridTemplateColumn CellTemplate="{StaticResource FormulaTemplate}" Header="Элементы контроля" Width="600" />
                        <DataGridTextColumn Header="Credits" Binding="{Binding Credits, Mode=TwoWay}" Width="100" FontSize="15" />
                        <DataGridTextColumn Header="Накоп" Binding="{Binding Score}" IsReadOnly="True" Width="100" FontSize="16" />
                        <DataGridTemplateColumn CellTemplate="{StaticResource EditTemplate}" Header="Edit" Width="100"/>
                    </DataGrid.Columns>

                    <DataGrid.Resources>

                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="White" />
                            <Setter Property="BorderThickness" Value="0,0,2,0"/>
                            <Setter Property="FontFamily" Value="Bahnschrift SemiCondensed" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Height" Value="50" />
                            <Setter Property="FontSize" Value="20" />
                        </Style>


                        <Style TargetType="{x:Type DataGridCell}">

                            <Style.Setters>
                                <Setter Property="TextBlock.TextAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style.Setters>

                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="BorderBrush" Value="{x:Null}" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                            </Style.Triggers>

                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="BorderBrush" Value="White" />
                            <Setter Property="BorderThickness" Value="1,2,1,0" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Height" Value="80" />
                            <Setter Property="FontFamily" Value="Bahnschrift SemiCondensed" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="Margin" Value="-1" />

                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{x:Null}" />
                                    <Setter Property="BorderBrush" Value="White" />
                                </Trigger>
                            </Style.Triggers>

                        </Style>
                    </DataGrid.RowStyle>



                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>
