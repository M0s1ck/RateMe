<Window x:Class="RateMe.View.Windows.GradesWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RateMe.View.Windows"
        mc:Ignorable="d"
        
        xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
        xmlns:userControls="clr-namespace:RateMe.View.UserControls"
        xmlns:svg="http://sharpvectors.codeplex.com/runtime/" xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        Title="GradesWin" Height="860" Width="1600" WindowStartupLocation="CenterScreen"
        Background="#10151b" MouseDown="OnWindowClick">
    

    <WindowChrome.WindowChrome>
        <WindowChrome />
    </WindowChrome.WindowChrome>

    <Grid x:Name="windowGrid">
        <Grid x:Name="MainGrid" Margin="0,60,0,0" HorizontalAlignment="Center">

            <Grid.Resources>
                <Style x:Key="OptionText" TargetType="{x:Type TextBlock}">
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontFamily" Value="Bahnschrift SemiCondensed"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
                
                <DataTemplate x:Key="FormulaTemplate">
                    <userControls:ControlElementsTable></userControls:ControlElementsTable>
                </DataTemplate>

                <DataTemplate x:Key="EditTemplate">
                    <userControls:SettingsGear MouseDown="OnEditGearClick"/>
                </DataTemplate>
                
                <DataTemplate x:Key="TrashBinTemplate">
                    <Grid>
                        <Button Click="OnTrashBinClick" MouseEnter="OnTrashBinEnter" MouseLeave="OnTrashBinLeave" Height="30" Width="30" 
                                Background="Transparent" BorderBrush="Transparent" OverridesDefaultStyle="True">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Button.Template>
                            <Image Source="{svgc:SvgImage Source=/Assets/trash-can-svgrepo-com (1).svg, AppName=RateMe}"/>
                        </Button>
                    </Grid>
                </DataTemplate>
                
            </Grid.Resources>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="1200"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0">
                <TextBlock Style="{StaticResource OptionText}" Text="Добавить предмет" Margin="0,0,0,100"/>
                <userControls:PlusButton MouseLeftButtonDown="OnAddSubject"/>
            </Grid>
            
            <Border Grid.Column="1" CornerRadius="10" BorderBrush="White" Background="Transparent" BorderThickness="2" Panel.ZIndex="1">
                <DataGrid x:Name="grades" ItemsSource="{Binding Subjects}" AutoGenerateColumns="False" HeadersVisibility="Column" SelectionMode="Single"
                      Width="1200" Background="Transparent" BorderBrush="Transparent" Foreground="White">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Предмет" Binding="{Binding Name}" Width="200" FontSize="17" />
                        <DataGridTemplateColumn CellTemplate="{StaticResource FormulaTemplate}" Header="Элементы контроля" Width="630" />
                        <DataGridTextColumn Header="Credits" Binding="{Binding Credits, Mode=TwoWay}" Width="100" FontSize="15" />
                        <DataGridTextColumn Header="Накоп" Binding="{Binding Score}" IsReadOnly="True" Width="100" FontSize="16" />
                        <DataGridTemplateColumn CellTemplate="{StaticResource EditTemplate}" Header="Edit" Width="80"/>
                        <DataGridTemplateColumn CellTemplate="{StaticResource TrashBinTemplate}" Header="Remove" Width="80"/>
                    </DataGrid.Columns>

                    <DataGrid.Resources>

                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="White" />
                            <Setter Property="BorderThickness" Value="0,0,2,0"/>
                            <Setter Property="FontFamily" Value="Bahnschrift SemiCondensed" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Height" Value="50" />
                            <Setter Property="FontSize" Value="20" />
                        </Style>


                        <Style TargetType="{x:Type DataGridCell}">

                            <Style.Setters>
                                <Setter Property="TextBlock.TextAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style.Setters>

                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="BorderBrush" Value="{x:Null}" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                            </Style.Triggers>

                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="BorderBrush" Value="White" />
                            <Setter Property="BorderThickness" Value="1,2,1,0" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Height" Value="80" />
                            <Setter Property="FontFamily" Value="Bahnschrift SemiCondensed" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="Margin" Value="-1" />

                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{x:Null}" />
                                    <Setter Property="BorderBrush" Value="White" />
                                </Trigger>
                            </Style.Triggers>

                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </Border>
            
            <Grid Grid.Column="2">
                <Button Style="{StaticResource ResourceKey=ContinueButtonStyle}" Click="OnSaveAndQuitClick" Margin="0,700,0,0"
                        Content="Сохранить и выйти" VerticalAlignment="Center" FontSize="18"
                        FontFamily="Bahnschrift SemiCondensed" Height="50" Width="160" Foreground="White" Background="#032169"/> 
            </Grid>
            
        </Grid>
    </Grid>
</Window>
