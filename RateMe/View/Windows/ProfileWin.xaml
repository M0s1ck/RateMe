<local:BaseFullWin x:Class="RateMe.View.Windows.ProfileWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RateMe.View.Windows"
        mc:Ignorable="d"
        xmlns:userControls="clr-namespace:RateMe.View.UserControls"
        Title="GradesWin" Height="760" Width="1100" WindowStartupLocation="CenterScreen"
        Background="#10151b" MouseDown="OnWindowClick">
    
    <WindowChrome.WindowChrome>
        <WindowChrome />
    </WindowChrome.WindowChrome>
    
    <local:BaseFullWin.Resources>
        <Style x:Key="TextStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Bahnschrift SemiCondensed"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </local:BaseFullWin.Resources>
    
    <Grid x:Name="WindowGrid">
        <Grid Margin="0,110,0,0">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0" Margin="60, 0,0,0">
                    <Rectangle Width="200" Height="200" Fill="Aqua" HorizontalAlignment="Left"/>
                </Grid>
                
                <Grid Grid.Column="1">
                    <StackPanel Margin="0, 20,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" >
                            <TextBlock Text="Имяимя" Style="{StaticResource TextStyle}" Margin="0,0,25, 0"/> <!--{Binding UserService.User.Name}-->
                            <TextBlock Text="Фамилия" Style="{StaticResource TextStyle}"/> <!--{Binding UserService.User.Surname}-->
                        </StackPanel>
                        
                        <TextBlock Text="email.email@edu.com" Style="{StaticResource TextStyle}" HorizontalAlignment="Left" Margin="0,20,0,0"/>  <!-- only your OWN pfp --> 
                    </StackPanel>
                    <TextBlock Text="You know after all that..." Style="{StaticResource TextStyle}" FontSize="21" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
                </Grid>
                
                <Grid Grid.Column="2">
                    <userControls:CoolSvgButton Size="45" BiggerSize="51" Source="/Assets/edit-pen3.svg" VerticalAlignment="Top" WhenClicked="OnEditClick"/>
                </Grid>
                
            </Grid>
        </Grid>
    </Grid>
</local:BaseFullWin>
