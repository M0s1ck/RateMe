<Window x:Class="RateMe.DataCollection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RateMe"
        xmlns:UserControls="clr-namespace:RateMe.View.UserControls"
        mc:Ignorable="d"
        MouseDown="OnWindowClick"
        Title="DataCollection" Height="600" Width="1000" WindowStartupLocation="CenterScreen">
        
    <Grid>

        <TextBlock HorizontalAlignment="Center" Margin="0,-500,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Text="Введите фамилию и имя" FontSize="18" FontFamily="Bahnschrift SemiBold Condensed"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,-460,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Text="(По ним будут браться оценочки из табличек)" FontSize="16" FontFamily="Bahnschrift SemiCondensed"/>

        <UserControls:DataCollectionTextForm x:Name="SurameTextBox" Hint="Фамилия" Width="150" Height="20" HorizontalAlignment="Center" Margin="-400,-380,0,0" VerticalAlignment="Center"/>
        <UserControls:DataCollectionTextForm x:Name="NameTextBox" Hint="Имя" Width="150" Height="20" HorizontalAlignment="Center" Margin="400,-380,0,0" VerticalAlignment="Center"/>

    </Grid>
</Window>
